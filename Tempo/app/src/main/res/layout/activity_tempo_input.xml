<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="cas.se3a04.merlin.TempoInput">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tapButtonText"
            android:id="@+id/TempoInButton" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:onClick="onTap" android:layout_below="@+id/SubmitButton"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/tempoDispDefaultText"
            android:id="@+id/TempoDisp"
            android:layout_alignTop="@+id/SubmitButton" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_above="@+id/TempoInButton"
            android:layout_toLeftOf="@+id/SubmitButton" android:layout_toStartOf="@+id/SubmitButton"
            android:gravity="center_vertical|center_horizontal"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submitButtonText"
            android:id="@+id/SubmitButton"
            android:layout_alignRight="@+id/TempoInButton" android:layout_alignEnd="@+id/TempoInButton"
            android:layout_alignParentTop="true"
            android:onClick="onSubmit"/>
</RelativeLayout>
